{
    "extends": [
      "standard",
      "angular"
    ],
    "plugins": [
      "standard",
      "promise",
      "angular"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
     "globals": {
     "angular": true
    },
    "parser": "babel-eslint",
    "rules": {
      "indent": ["warn", 4],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "spaced-comment":"warn",
      "comma-dangle": ["error", "never"],
      "no-cond-assign": ["error", "always"],
      "no-console": "off",
      "angular/log": 0
    }
}
